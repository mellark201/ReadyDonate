<div class="row">
    <div style="width: 30%; margin: 25px auto;">
        <div class="form-group">
            <input class="form-control" value="<%=details.name%>" required type="text"  name="name" placeholder="Name">
        </div>
        <div class="form-group">
            <label>Blood Group</label>
            <select name="blood">
                <option label="A+" value="A+"></option>
                <option label="O+" value="O+"></option>
                <option label="B+" value="B+"></option>
                <option label="AB+" value="AB+"></option>
                <option label="A-" value="A-"></option>
                <option label="O-" value="O-"></option>
                <option label="B-" value="B-"></option>
                <option label="AB-" value="AB-"></option>
            </select>
        </div>
        <div class="form-group">
            <input class="form-control" value="<%=details.phone%>" required type="text" name="phone" placeholder="Phone Number">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
    </div>
</div>